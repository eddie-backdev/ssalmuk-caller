<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Stats -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이번 달 발신정보"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvCallCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="발신콜수 : 0" />

            <TextView
                android:id="@+id/tvCallDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="발신시간 : 00:00:00" />
        </LinearLayout>

        <!-- Number List -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/label_numbers"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPhoneNumbers"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:drawable/edit_text"
            android:gravity="top|start"
            android:hint="전화번호를 입력하세요 (줄바꿈으로 구분)"
            android:inputType="textMultiLine"
            android:padding="8dp" />

        <!-- Auto Call Settings -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_auto_call"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Switch
                android:id="@+id/switchAutoCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <CheckBox
            android:id="@+id/cbWifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_wifi_cond" />

        <TextView
            android:id="@+id/tvIntervalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="걸기간격 설정 (초)"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etIntervalMin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="최소(초)" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ " />
            <EditText
                android:id="@+id/etIntervalMax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="최대(초)" />
        </LinearLayout>


        <!-- Auto Hangup Settings -->
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_auto_hangup"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Switch
                android:id="@+id/switchAutoHangup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvHangupLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="끊기간격 설정 (분)"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/etHangupMin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="최소(분)" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ " />
            <EditText
                android:id="@+id/etHangupMax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="최대(분)" />
        </LinearLayout>

        <!-- Auto Answer Settings -->
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_auto_answer"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Switch
                android:id="@+id/switchAutoAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>


        <!-- Manual Disconnect Button -->
        <Button
            android:id="@+id/btnHangupNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#FF0000"
            android:text="현재 통화 즉시 끊기"
            android:textColor="@color/white"
            android:textStyle="bold" />
            
        <Button
            android:id="@+id/btnSetDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/purple_500"
            android:text="기본 전화 앱으로 설정 (필수)"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
