<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_blue"
        app:title="@string/title"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stats Header with Reset Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번 달 사용 현황 (목표)"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <ImageButton
                    android:id="@+id/btnResetStats"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="통계 초기화"
                    app:tint="?android:attr/textColorSecondary" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:elevation="1dp">

                <TextView
                    android:id="@+id/tvCallCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="발신콜수 : 0"
                    android:textStyle="bold" />
                <ProgressBar
                    android:id="@+id/pbCallCount"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:progressTint="@color/primary_blue" />

                <TextView
                    android:id="@+id/tvCallDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="발신시간 : 00:00:00"
                    android:textStyle="bold" />
                <ProgressBar
                    android:id="@+id/pbCallDuration"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:progressTint="#4CAF50" />

                <TextView
                    android:id="@+id/tvDataUsage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="데이터 사용 : 0.0 MB"
                    android:textStyle="bold" />
                <ProgressBar
                    android:id="@+id/pbDataUsage"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressTint="#FF9800" />
            </LinearLayout>
            
            <!-- Goals -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="이번 달 목표 (0 = 무제한)"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/etGoalCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="콜수"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etGoalDuration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="시간(분)"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etGoalData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="데이터(MB)"
                    android:inputType="number" />
            </LinearLayout>

            <!-- Data Auto Consumption -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tvDataTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자동 데이터 소모"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchAutoData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"/>
                
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbDataTurbo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvDataTitle"
                    android:text="터보 모드 (고속 소모)"
                    android:textSize="14sp"
                    android:textColor="#F44336"
                    android:layout_marginTop="4dp" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="목표 달성 시까지 백그라운드에서 데이터를 소모합니다.\n(Wi-Fi에서는 동작하지 않음)"
                android:textSize="12sp"
                android:textColor="#666666" />
            
            <!-- Number List Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tvNumberTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_numbers"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvNumberCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="(0개)"
                    android:textColor="?android:attr/textColorSecondary"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btnManageNumbers"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:text="번호 목록 관리하러 가기"
                android:textColor="?android:attr/textColorPrimary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="textStart"
                app:iconTint="?android:attr/textColorPrimary" />

            <!-- Auto Call Settings -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_auto_call"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchAutoCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="걸기요일"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:id="@+id/layoutWeekDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatCheckBox android:text="일" android:tag="1" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatCheckBox android:text="월" android:tag="2" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatCheckBox android:text="화" android:tag="3" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatCheckBox android:text="수" android:tag="4" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatCheckBox android:text="목" android:tag="5" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatCheckBox android:text="금" android:tag="6" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatCheckBox android:text="토" android:tag="7" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvIntervalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="걸기간격 설정 (초)"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etIntervalMin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:hint="최소(초)" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ~ " />
                <EditText
                    android:id="@+id/etIntervalMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:hint="최대(초)" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미수신 시 끊기(초) "
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/etNoAnswerTimeout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="30"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최소 통화 인정 시간 (초) "
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/etMinSuccessDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="5"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Auto Hangup Settings -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_auto_hangup"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchAutoHangup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvHangupLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="끊기간격 설정 (분)"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etHangupMin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:hint="최소(분)" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ~ " />
                <EditText
                    android:id="@+id/etHangupMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:hint="최대(분)" />
            </LinearLayout>
            
            <!-- Auto Answer Settings -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_auto_answer"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchAutoAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            
            <!-- Pause Settings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/label_pause_time"
                android:textSize="18sp"
                android:textStyle="bold" />
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중지시간 "
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/etPauseStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="21:00"
                    android:inputType="time"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ~ "/>
                <EditText
                    android:id="@+id/etPauseEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="07:40"
                    android:inputType="time"
                    android:layout_weight="1"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중지기능 "
                    android:textStyle="bold"/>
                <androidx.appcompat.widget.AppCompatCheckBox 
                    android:id="@+id/cbPauseCall" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="걸기" 
                    android:layout_marginStart="8dp"/>
                <androidx.appcompat.widget.AppCompatCheckBox 
                    android:id="@+id/cbPauseHangup" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="끊기" 
                    android:layout_marginStart="8dp"/>
                <androidx.appcompat.widget.AppCompatCheckBox 
                    android:id="@+id/cbPauseAnswer" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:text="받기" 
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnSetBattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#FF9800"
                android:text="배터리 최적화 제외 설정 (권장)"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnSetOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#4CAF50"
                android:text="다른 앱 위에 표시 설정 (권장)"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnSetAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#00BCD4"
                android:text="정확한 알람 권한 설정 (권장)"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnBackupRestore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#673AB7"
                android:text="설정 백업/복원"
                android:textColor="@color/white"
                app:icon="@drawable/ic_settings_backup_restore"
                app:iconGravity="textStart"
                app:iconTint="@color/white" />

            <Button
                android:id="@+id/btnSetAccessibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/purple_500"
                android:text="접근성 권한 설정 (필수)"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
